<% content_for :body do %>
  <section class="contact-card">
    <h1 class="cc-attribute cc-name"><%=raw @cause.cause_name %></h1>
    
    <div class="grid-x grid-padding-x">
      <div class="cell medium-9">
        
        <table class="cc-table">
          <tbody>
          <tr>
            <th style="width: 150px;">Code</th>
            <td><%= @cause.code %></td>
          </tr>
          <tr>
            <th style="width: 150px;">Category</th>
            <td><%= @cause.category_name %></td>
          </tr>
          <tr>
            <th>Defect</th>
            <td><%= @cause.cause_name %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h5><%= t('.similar') %></h5>
    <% similar_to(@cause).each do |cause| %>
      <div class="sidebar-item">
        <div class="item-title">
          <%= link_to cause.code, refinery.quality_assurance_cause_path(cause) %>
        </div>
        <div class="item-content">
          <%= cause.cause_name %>
        </div>
        <div class="item-trailing">
          <small style="float: right;"><%= cause.category_name %></small>
        </div>
      </div>
    <% end %>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
