<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(defect) -%>">
  <span class='title'>
    <%= defect.label %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.quality_assurance_defect_path(defect), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_quality_assurance_admin_defect_path(defect), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.quality_assurance_admin_defect_path(defect), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: defect.label)}}  ) %>
  </span>
</li>
