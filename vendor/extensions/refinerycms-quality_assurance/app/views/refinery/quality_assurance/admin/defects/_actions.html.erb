<ul>
  <% if ::Refinery::QualityAssurance::Admin::DefectsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.quality_assurance_admin_defects_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_quality_assurance_admin_defect_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::QualityAssurance::Admin::DefectsController.sortable? && ::Refinery::QualityAssurance::Defect.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.quality_assurance_admin_defects_path,
                     t('.reorder', what:  "Defects"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.quality_assurance_admin_defects_path,
                      t('.reorder_done', what: "Defects"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
