<% inspection.inspection_defects.each do |inspection_defect| %>
  <h5 style="margin-top: 30px;"><%= inspection_defect.defect_label %></h5>

  <div class="grid-x grid-padding-x">
    <div class="cell medium-4">
      <section class="contact-card">
        <table class="cc-table">
          <tbody>
          <tr>
            <th>Critical</th>
            <td><%= inspection_defect.critical %></td>
          </tr>
          <tr>
            <th>Major</th>
            <td><%= inspection_defect.major %></td>
          </tr>
          <tr>
            <th>Minor</th>
            <td><%= inspection_defect.minor %></td>
          </tr>
          <tr>
            <th>Can Fix?</th>
            <td><%= inspection_defect.display_can_fix %></td>
          </tr>
          <tr>
            <th>Comments</th>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td colspan="2">
              <ol>
                <% inspection.comments_for(inspection_defect).each do |comment| %>
                  <li><small><%= comment %></small></li>
                <% end %>
              </ol>
            </td>
          </tr>
          </tbody>
        </table>
      </section>
    </div>

    <div class="cell medium-8">
      <div style="margin-top: 10px;">
        <div class="block-css-grid">
          <% inspection_defect.inspection_photos.each do |inspection_photo| %>
            <%= dragonfly_reveal_tag inspection_photo.image %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
