<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(brand) -%>">
  <span class='title'>
    <%= brand.name %>
    <span class="preview">
      <%= t('.preview', :created_at => l(brand.created_at, :format => :short)) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.marketing_brand_path(brand), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_marketing_admin_brand_path(brand), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.marketing_admin_brand_path(brand), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: brand.name)}}  ) %>
  </span>
</li>
