<%= form_for [refinery, :marketing_admin, @contact] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @contact,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :user_id -%>
    <%= f.select :user_id, options_from_collection_for_select(::Refinery::Authentication::Devise::User.all, :id, :full_name, @contact.user_id), include_blank: true -%>
  </div>

  <div class='field'>
    <%= f.label :base_id -%>
    <%= f.text_field :base_id, disabled: true -%>
  </div>

  <div class='field'>
    <%= f.label :code -%>
    <%= f.text_field :code -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name -%>
  </div>

  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>

  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

  <div class='field'>
    <%= f.label :skype -%>
    <%= f.text_field :skype -%>
  </div>

  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :private -%>
    <%= f.check_box :private, :checked => @contact[:private] -%>
  </div>

  <div class='field'>
    <%= f.label :contact_id -%>
    <%= f.text_field :contact_id, disabled: true -%>
  </div>

  <div class='field'>
    <%= f.label :is_organisation -%>
    <%= f.check_box :is_organisation, :checked => @contact[:is_organisation] -%>
  </div>

  <div class='field'>
    <%= f.label :mobile -%>
    <%= f.text_field :mobile -%>
  </div>

  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax -%>
  </div>

  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :linked_in -%>
    <%= f.text_field :linked_in -%>
  </div>

  <div class='field'>
    <%= f.label :facebook -%>
    <%= f.text_field :facebook -%>
  </div>

  <div class='field'>
    <%= f.label :industry -%>
    <%= f.text_field :industry -%>
  </div>

  <div class='field'>
    <%= f.label :twitter -%>
    <%= f.text_field :twitter -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :organisation_name -%>
    <%= f.text_field :organisation_name -%>
  </div>

  <div class='field'>
    <%= f.label :image_url, 'Image URL (synced from CRM system)' -%>
    <%= f.text_field :image_url -%>
  </div>

  <div class='field'>
    <%= f.label :courier_company -%>
    <%= f.text_field :courier_company -%>
  </div>

  <div class='field'>
    <%= f.label :courier_account_no -%>
    <%= f.text_field :courier_account_no -%>
  </div>

  <div class='field'>
    <%= f.label :insightly_id -%>
    <%= f.text_field :insightly_id -%>
  </div>

  <div class='field'>
    <%= f.label :tags_joined_by_comma -%>
    <%= f.text_field :tags_joined_by_comma -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.marketing.admin.contacts.contact'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @contact.name) -%>
<% end -%>
