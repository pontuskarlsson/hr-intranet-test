<ul>
  <% if ::Refinery::Marketing::Admin::LandingPagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.marketing_admin_landing_pages_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_marketing_admin_landing_page_path,
                 :class => "add_icon" %>
  </li>

  <%= render 'refinery/marketing/admin/shared/links' %>

<% if !searching? && ::Refinery::Marketing::Admin::LandingPagesController.sortable? && ::Refinery::Marketing::LandingPage.many? %>
  <li>
    <%= link_to t('.reorder', :what => "LandingPages"),
                 refinery.marketing_admin_landing_pages_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "LandingPages"),
                 refinery.marketing_admin_landing_pages_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
