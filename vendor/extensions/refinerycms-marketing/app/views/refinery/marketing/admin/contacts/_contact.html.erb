<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(contact) -%>">
  <span class='title'>
    <%= contact.name %>
    <span class="preview">
      <%= t('.preview', :created_at => l(contact.created_at, :format => :short), email: contact.email.presence || 'No email', organisation_name: contact.is_organisation ? '' : contact.organisation_name) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.marketing_contact_path(contact), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_marketing_admin_contact_path(contact), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.marketing_admin_contact_path(contact), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: contact.name)}}  ) %>
  </span>
</li>
