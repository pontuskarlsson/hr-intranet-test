<%= form_for [refinery, :marketing_admin, @campaign] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @campaign,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.marketing.admin.campaigns.campaign'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @campaign.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
