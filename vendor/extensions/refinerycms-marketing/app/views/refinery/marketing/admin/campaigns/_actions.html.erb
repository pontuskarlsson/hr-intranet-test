<ul>
  <% if ::Refinery::Marketing::Admin::CampaignsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.marketing_admin_campaigns_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_marketing_admin_campaign_path,
                 :class => "add_icon" %>
  </li>

  <%= render 'refinery/marketing/admin/shared/links' %>

<% if !searching? && ::Refinery::Marketing::Admin::CampaignsController.sortable? && ::Refinery::Marketing::Campaign.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Campaigns"),
                 refinery.marketing_admin_campaigns_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Campaigns"),
                 refinery.marketing_admin_campaigns_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
