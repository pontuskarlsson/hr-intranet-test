<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(show) -%>">
  <span class='title'>
    <%= show.name %>
    <span class="preview">
      <%= t('.preview', :created_at => l(show.created_at, :format => :short)) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.marketing_show_path(show), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_marketing_admin_show_path(show), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.marketing_admin_show_path(show), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: show.name)}}  ) %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_marketing_admin_show_path(show),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.marketing_admin_show_path(show),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => show.name),
        :method => :delete %>
  </span>
</li>
