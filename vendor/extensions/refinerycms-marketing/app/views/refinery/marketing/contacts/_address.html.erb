<table class="cc-table">
  <tbody>
  <tr>
    <th>Street</th>
    <td>
      <%= address.address1 %>
      <% if address.address2.present? %>
        <br/>
        <%= address.address2 %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>City</th>
    <td><%= address.city %></td>
  </tr>
  <tr>
    <th>Postal</th>
    <td><%= address.postal_code %></td>
  </tr>
  <tr>
    <th>State / Province</th>
    <td><%= address.province %></td>
  </tr>
  <tr>
    <th>Country</th>
    <td><%= address.country %></td>
  </tr>
  </tbody>
</table>
