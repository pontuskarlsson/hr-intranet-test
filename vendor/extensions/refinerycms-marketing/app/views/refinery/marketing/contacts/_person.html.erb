<section class="contact-card">
  <h1 class="cc-attribute cc-name">
    <% if contact.first_name.present? or contact.last_name.present? %>
      <%=raw contact.first_name %>
      <%=raw contact.last_name %>
    <% else %>
      <%=raw contact.name %>
    <% end %>
    <i class="fa fa-user"></i>
  </h1>

  <% if contact.tags_joined_by_comma.present? %>
    <p class="cc-attribute cc-tags">
      <% contact.tags_joined_by_comma.split(',').each do |tag| %>
        <span class="cc-tag"><%= tag %></span>
      <% end %>
    </p>
  <% end %>

  <% if contact.organisation.present? %>
    <h3>Company</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th>Company</th>
        <td><%= link_to contact.organisation.name, refinery.marketing_contact_path(contact.organisation) %></td>
      </tr>
      <tr>
        <th>Title</th>
        <td><%= contact.title %></td>
      </tr>
      </tbody>
    </table>

  <% elsif contact.organisation_name.present? %>
    <h3>Company</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th>Company</th>
        <td><%= contact.organisation_name %></td>
      </tr>
      <tr>
        <th>Title</th>
        <td><%= contact.title %></td>
      </tr>
      </tbody>
    </table>
  <% end %>

  <h3>Contact Info</h3>
  <table class="cc-table">
    <tbody>
    <tr>
      <th>Phone</th>
      <td><%= contact.phone %></td>
    </tr>
    <% if contact.mobile.present? %>
      <tr>
        <th>Mobile</th>
        <td><%= contact.mobile %></td>
      </tr>
    <% end %>
    <% if contact.fax.present? %>
      <tr>
        <th>Fax</th>
        <td><%= contact.fax %></td>
      </tr>
    <% end %>
    <% if contact.skype.present? %>
      <tr>
        <th>Skype</th>
        <td><%= contact.skype %></td>
      </tr>
    <% end %>
    <% if contact.email.present? %>
      <tr>
        <th>Email</th>
        <td><%= mail_to contact.email  %></td>
      </tr>
    <% end %>
    <% if contact.website.present? %>
      <tr>
        <th>Website</th>
        <td><%=link_to contact.website.gsub(/http:\/\/|https:\/\//, ''), contact.website %></td>
      </tr>
    <% end %>
    <% if contact.facebook.present? %>
      <tr>
        <th>Facebook</th>
        <td><%= link_to contact.facebook.gsub(/http:\/\/|https:\/\//, ''), contact.facebook %></td>
      </tr>
    <% end %>
    <% if contact.twitter.present? %>
      <tr>
        <th>Twitter</th>
        <td><%= link_to 'twitter.com/'<<contact.twitter, 'https://twitter.com/'<<contact.twitter %></td>
      </tr>
    <% end %>
    <% if contact.linked_in.present? %>
      <tr>
        <th>LinkedIn</th>
        <td><%= contact.linked_in %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h3>Address</h3>
  <table class="cc-table">
    <tbody>
    <tr>
      <th>Street</th>
      <td><%= contact.address %></td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= contact.city %></td>
    </tr>
    <tr>
      <th>Zip</th>
      <td><%= contact.zip %></td>
    </tr>
    <tr>
      <th>State</th>
      <td><%= contact.state %></td>
    </tr>
    <tr>
      <th>Country</th>
      <td><%= contact.country %></td>
    </tr>
    </tbody>
  </table>
</section>
