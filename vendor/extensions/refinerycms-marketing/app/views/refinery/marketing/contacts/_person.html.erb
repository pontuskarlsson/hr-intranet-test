<section class="contact-card">
  <h1 class="cc-attribute cc-name">
    <% if contact.first_name.present? or contact.last_name.present? %>
      <%=raw contact.first_name %>
      <%=raw contact.last_name %>
    <% else %>
      <%=raw contact.name %>
    <% end %>
    <i class="fa fa-user"></i>
  </h1>

  <% if contact.tags_joined_by_comma.present? %>
    <p class="cc-attribute cc-tags">
      <% contact.tags_joined_by_comma.split(',').each do |tag| %>
        <span class="cc-tag"><%= tag %></span>
      <% end %>
    </p>
  <% end %>

  <% if contact.organisation.present? %>
    <h3>Company</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th>Company</th>
        <td><%= link_to contact.organisation.name, refinery.marketing_contact_path(contact.organisation) %></td>
      </tr>
      <tr>
        <th>Title</th>
        <td><%= contact.title %></td>
      </tr>
      </tbody>
    </table>

  <% elsif contact.organisation_name.present? %>
    <h3>Company</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th>Company</th>
        <td><%= contact.organisation_name %></td>
      </tr>
      <tr>
        <th>Title</th>
        <td><%= contact.title %></td>
      </tr>
      </tbody>
    </table>
  <% end %>

  <%= render 'refinery/marketing/contacts/contact_info', contact: contact %>

  <% if contact.mail_address.present? %>
    <h3>Mail Address</h3>
    <%= render 'refinery/marketing/contacts/address', address: contact.mail_address %>
  <% end %>

  <% if contact.other_address.present? %>
    <h3>Other Address</h3>
    <%= render 'refinery/marketing/contacts/address', address: contact.other_address %>
  <% end %>

  <% if contact.description.present? %>
    <h3>Additional</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th>Background</th>
        <td><%= contact.description %></td>
      </tr>
      </tbody>
    </table>
  <% end %>
</section>
