<section class="contact-card">
  <h1 class="cc-attribute cc-name">
    <%=raw contact.name %>
    <i class="fa fa-building"></i>
  </h1>

  <% if contact.tags_joined_by_comma.present? %>
    <p class="cc-attribute cc-tags">
      <% contact.tags_joined_by_comma.split(',').each do |tag| %>
        <span class="cc-tag"><%= tag %></span>
      <% end %>
    </p>
  <% end %>

  <h3>Contact Info</h3>
  <table class="cc-table">
    <tbody>
    <tr>
      <th>Phone</th>
      <td><%= contact.phone %></td>
    </tr>
    <% if contact.mobile.present? %>
      <tr>
        <th>Mobile</th>
        <td><%= contact.mobile %></td>
      </tr>
    <% end %>
    <% if contact.fax.present? %>
      <tr>
        <th>Fax</th>
        <td><%= contact.fax %></td>
      </tr>
    <% end %>
    <% if contact.skype.present? %>
      <tr>
        <th>Skype</th>
        <td><%= contact.skype %></td>
      </tr>
    <% end %>
    <% if contact.email.present? %>
      <tr>
        <th>Email</th>
        <td><%= mail_to contact.email  %></td>
      </tr>
    <% end %>
    <% if contact.website.present? %>
      <tr>
        <th>Website</th>
        <td><%=link_to contact.website.gsub(/http:\/\/|https:\/\//, ''), contact.website %></td>
      </tr>
    <% end %>
    <% if contact.facebook.present? %>
      <tr>
        <th>Facebook</th>
        <td><%= link_to contact.facebook.gsub(/http:\/\/|https:\/\//, ''), contact.facebook %></td>
      </tr>
    <% end %>
    <% if contact.twitter.present? %>
      <tr>
        <th>Twitter</th>
        <td><%= link_to 'twitter.com/'<<contact.twitter, 'https://twitter.com/'<<contact.twitter %></td>
      </tr>
    <% end %>
    <% if contact.linked_in.present? %>
      <tr>
        <th>LinkedIn</th>
        <td><%= contact.linked_in %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h3>Address</h3>
  <table class="cc-table">
    <tbody>
    <tr>
      <th>Street</th>
      <td><%= contact.address %></td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= contact.city %></td>
    </tr>
    <tr>
      <th>Zip</th>
      <td><%= contact.zip %></td>
    </tr>
    <tr>
      <th>State</th>
      <td><%= contact.state %></td>
    </tr>
    <tr>
      <th>Country</th>
      <td><%= contact.country %></td>
    </tr>
    </tbody>
  </table>

  <h3>Courier Details</h3>
  <table class="cc-table">
    <tbody>
    <tr>
      <th>Company</th>
      <td><%= contact.courier_company %></td>
    </tr>
    <tr>
      <th>Account No.</th>
      <td><%= contact.courier_account_no %></td>
    </tr>
    </tbody>
  </table>

  <h3>Employees</h3>
  <% if contact.employees.any? %>
    <ul class="business-cards bc-grid">
      <% contact.employees.each do |employee| %>
        <%= render 'refinery/marketing/contacts/business_card', contact: employee %>
      <% end %>
    </ul>
  <% else %>
    <p class="cc-attribute italic">No Employees registered</p>
  <% end %>
</section>
