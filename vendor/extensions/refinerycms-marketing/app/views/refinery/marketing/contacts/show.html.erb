<% content_for :body do %>
  <% if @contact.is_organisation %>
    <%= render 'refinery/marketing/contacts/organisation', contact: @contact %>
  <% else %>
    <%= render 'refinery/marketing/contacts/person', contact: @contact %>
  <% end %>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h3><%= t('.similar') %></h3>
    <ul class="business-cards">
      <% @contact.contacts_with_same_tags(10).each do |contact| %>
        <%= render 'refinery/marketing/contacts/business_card', contact: contact %>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
