<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(calendar) -%>">
  <span class='title'>
    <%= calendar.title %>

  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_calendar_admin_calendar_path(calendar), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.calendar_admin_calendar_path(calendar), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: calendar.title)}}  ) %>
  </span>
</li>
