<% content_for :body do %>
  <section class="employee">
    <% if @employee.profile_image.present? %>
      <%= image_tag(@employee.profile_image.thumbnail(geometry: '270x270#c').url, class: 'profile-picture') %>
    <% else %>
      <%= image_tag('user_unknown.png', class: 'profile-picture') %>
    <% end %>

    <% if @employee.contact.present? %>
      <%= render '/refinery/marketing/contacts/person', contact: @employee.contact %>

    <% else %>
      <h4><%= @employee.full_name %></h4>
    <% end %>

    <h5>Emergency Contact</h5>
    <p><%= @employee.emergency_contact %></p>

    <h5>Birthday</h5>
    <p><%= @employee.birthday && @employee.birthday.strftime("%b #{@employee.birthday.day.ordinalize}") %></p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="employees">
      <% @employees.each do |employee| %>
        <li>
          <%= link_to employee.full_name, refinery.employees_employee_path(employee) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
