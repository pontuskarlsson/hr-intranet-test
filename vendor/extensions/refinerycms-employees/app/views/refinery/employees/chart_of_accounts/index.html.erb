<% content_for :body do %>

  <table>
    <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>When to use</th>
    </tr>
    </thead>
    <tbody>
    <% @xero_accounts.each do |xero_account| %>
      <tr>
        <td><%= xero_account.code %></td>
        <td><%= xero_account.name %></td>
        <td><%= xero_account.account_type %></td>
        <td><%= xero_account.description %></td>
        <td><%= xero_account.when_to_use %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>


<%= render '/refinery/content_page' %>
