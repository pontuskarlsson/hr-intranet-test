<% content_for :body do %>

  <%= render 'form', leave_of_absence: @leave_of_absence %>

  <h4 class="t2">Registered Annual Leave</h4>

  <table>
    <thead>
      <tr>
        <th>Start</th>
        <th>End</th>
        <th>No. of days</th>
        <th>Type of Absence</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @leave_of_absences.each do |leave_of_absence| %>
        <tr>
          <td><%= leave_of_absence.start_date %></td>
          <td><%= leave_of_absence.end_date %></td>
          <td><%= leave_of_absence.no_of_days %></td>
          <td><%= leave_of_absence.display_type_of_absence %></td>
          <td><%= leave_of_absence.display_status %></td>
          <td>
            <%= link_to 'Edit', refinery.edit_employees_annual_leave_path(leave_of_absence) %>
            <%= link_to 'Remove', refinery.employees_annual_leave_path(leave_of_absence), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <th>Start</th>
        <th>End</th>
        <th>No. of days</th>
        <th>Type of Absence</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </tfoot>
  </table>
<% end %>


<% content_for :side_body do %>
  <h4>Summary</h4>

<% end %>

<%= render '/refinery/content_page' %>
