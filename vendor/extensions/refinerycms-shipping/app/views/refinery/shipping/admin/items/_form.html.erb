<%= form_for [refinery, :shipping_admin, @item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @item,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :shipment_label -%>
    <%= f.text_field :shipment_label, class: 'js_shipment_field' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.shipping.admin.items.item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @item.to_address.try(:name)) -%>
<% end -%>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $(function(){
      $('.js_shipment_field').autocomplete({
        source: <%= ::Refinery::Shipping::Shipment.to_source %>
      });
    });
  </script>
<% end %>
