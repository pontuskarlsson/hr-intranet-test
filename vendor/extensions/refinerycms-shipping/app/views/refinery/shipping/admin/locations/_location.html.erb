<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(location) -%>">
  <span class='title'>
    <%= location.name %>
    <span class="preview">
      <%= t('.preview') %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_shipping_admin_location_path(location), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.shipping_admin_location_path(location), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: location.label)}}  ) %>
  </span>
</li>
