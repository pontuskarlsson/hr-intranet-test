<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(location) -%>">
  <span class='title'>
    <%= location.name %>
    <span class="preview">
      <%= t('.preview') %>
    </span>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_shipping_admin_location_path(location),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.shipping_admin_location_path(location),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => location.name),
        :method => :delete %>
  </span>
</li>
