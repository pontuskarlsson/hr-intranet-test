<ul>
  <% if ::Refinery::Shipping::Admin::LocationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.shipping_admin_locations_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_shipping_admin_location_path,
                 :class => "add_icon" %>
  </li>
  <%= render '/refinery/shipping/admin/shared/links' %>

<% if !searching? && ::Refinery::Shipping::Admin::LocationsController.sortable? && ::Refinery::Shipping::Location.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Locations"),
                 refinery.shipping_admin_locations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Locations"),
                 refinery.shipping_admin_locations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
