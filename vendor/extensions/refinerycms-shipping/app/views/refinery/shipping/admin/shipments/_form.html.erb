<%= form_for [refinery, :shipping_admin, @shipment] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @shipment,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :created_by_id -%>
    <%= f.collection_select :created_by_id, ::Refinery::Authentication::Devise::User.all, :id, :full_name -%>
  </div>

  <div class='field'>
    <%= f.label :assigned_to_id -%>
    <%= f.collection_select :assigned_to_id, ::Refinery::Authentication::Devise::User.all, :id, :full_name, include_blank: true -%>
  </div>

  <div class='field'>
    <%= f.label :from_contact_label -%>
    <%= f.text_field :from_contact_label, class: 'js_contact_field' -%>
  </div>

  <div class='field'>
    <%= f.label :to_contact_label -%>
    <%= f.text_field :to_contact_label, class: 'js_contact_field' -%>
  </div>

  <div class='field'>
    <%= f.label :bill_to -%>
    <%= f.select :bill_to, options_for_select(::Refinery::Shipping::Shipment::BILL_TO) -%>
  </div>

  <div class='field'>
    <%= f.label :bill_to_account_id -%>
    <%= f.collection_select :bill_to_account_id, ::Refinery::Shipping::ShipmentAccount.all, :id, :account_and_description, include_blank: true -%>
  </div>

  <div class='field'>
    <%= f.label :courier -%>
    <%= f.text_field :courier, class: 'js_courier_field' -%>
  </div>


  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.shipping.admin.shipments.shipment'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @shipment.to_address.try(:name)) -%>
<% end -%>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $(function(){
      $('.js_contact_field').autocomplete({
        source: <%= ::Refinery::Marketing::Contact.pluck(:name).to_json.html_safe %>
      });
      $('.js_courier_field').autocomplete({
        source: <%= ::Refinery::Shipping::Shipment.easypost_couriers.to_json.html_safe %>
      });
    });
  </script>
<% end %>
