<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(route) -%>">
  <span class='title'>
    <%= route.to_address_name %>
    <span class="preview">
      <%= t('.preview', from_address_name: route.from_address_name, bill_to: route.bill_to, status: route.status) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_shipping_admin_route_path(route), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.shipping_admin_route_path(route), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: route.label)}}  ) %>
  </span>
</li>
