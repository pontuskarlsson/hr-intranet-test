<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(package) -%>">
  <span class='title'>
    <%= package.to_address_name %>
    <span class="preview">
      <%= t('.preview', from_address_name: package.from_address_name, bill_to: package.bill_to, status: package.status) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_shipping_admin_package_path(package), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.shipping_admin_package_path(package), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: package.shipment&.code)}}  ) %>
  </span>
</li>
