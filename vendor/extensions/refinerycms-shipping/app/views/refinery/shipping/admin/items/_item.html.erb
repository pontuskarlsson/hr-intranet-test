<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(item) -%>">
  <span class='title'>
    <%= item.to_address_name %>
    <span class="preview">
      <%= t('.preview', from_address_name: item.from_address_name, bill_to: item.bill_to, status: item.status) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.shipping_item_path(item), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_shipping_admin_item_path(item), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.shipping_admin_item_path(item), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: item.to_address&.name)}}  ) %>
  </span>
</li>
