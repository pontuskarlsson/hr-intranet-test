<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(shipment) -%>">
  <span class='title'>
    <%= shipment.code %>
    <span class="preview">
      <%= t('.preview', shipper_company_label: shipment.shipper_company_label, receiver_company_label: shipment.receiver_company_label) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.shipping_shipment_path(shipment), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_shipping_admin_shipment_path(shipment), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.shipping_admin_shipment_path(shipment), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: shipment.to_address&.name)}}  ) %>
  </span>
</li>
