<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(shipment) -%>">
  <span class='title'>
    <%= shipment.code %>
    <span class="preview">
      <%= t('.preview', shipper_company_label: shipment.shipper_company_label, receiver_company_label: shipment.receiver_company_label) %>
    </span>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.shipping_shipment_path(shipment),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_shipping_admin_shipment_path(shipment),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.shipping_admin_shipment_path(shipment),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => shipment.to_address.try(:name)),
        :method => :delete %>
  </span>
</li>
