<%= form_for [refinery, :shipping, shipment] do |f| -%>

  <div class="grid-x grid-padding-x">
    <div class="cell">
      <div class='field'>
        <%= f.label :shipper_company_label, 'Shipper'  -%>
        <%= f.text_field :shipper_company_label, class: 'js_company_field' -%>
      </div>
    </div>

    <div class="cell">
      <div class='field'>
        <%= f.label :receiver_company_label, 'Receiver'  -%>
        <%= f.text_field :receiver_company_label, class: 'js_company_field' -%>
      </div>
    </div>

    <div class="cell">
      <div class='field'>
        <%= f.label :mode, 'Mode' -%>
        <%= f.select :mode, options_for_select(::Refinery::Shipping::Shipment::SHIP_MODES, f.object.mode) -%>
      </div>
    </div>

    <div class="cell">
      <div class='field t1'>
        <%= f.submit 'Add', class: 'tiny button round' %>
      </div>
    </div>
  </div>
<% end -%>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $(function(){
      $('.js_date_field').datepicker({ dateFormat: "yy-mm-dd" });
      $('.js_company_field').autocomplete({ source: <%= ::Refinery::Business::Company.for_user_roles(current_refinery_user).to_source %> });
    });
  </script>
<% end %>
