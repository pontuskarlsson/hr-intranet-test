<div class="route-container">
  <div class="route">
    <div class="checkpoint">
      <% if route.persisted? %>
        <% if route.has_completed? %>
          <i class="fa fa-check-circle departed" data-tooltip title="<%= route.location_label %>"></i>
        <% else %>
          <i class="fa fa-circle-o" data-tooltip title="<%= route.location_label %>"></i>
        <% end %>
      <% else %>
        <i class="fa fa-question" ></i>
      <% end %>
    </div>

    <% if next_route.has_completed? %>
      <div class="transport arrived"></div>
    <% elsif route.has_completed? %>
      <div class="transport departed"></div>
    <% else %>
      <div class="transport"></div>
    <% end %>

    <% if route.has_completed? && !next_route.has_completed? %>
      <div class="in-transit">
        <% if (route.route_type_is_origin? && next_route.route_type_is_destination?) || (route.route_type_is_port_of_loading? && next_route.route_type_is_port_of_discharge?) %>
          <% if shipment.mode == 'Air' %>
            <i class="fa fa-plane" ></i>
          <% elsif shipment.mode == 'Rail' %>
            <i class="fa fa-train" ></i>
          <% elsif shipment.mode == 'Road' %>
            <i class="fa fa-truck fa-flip-horizontal" ></i>
          <% elsif shipment.mode == 'Sea' %>
            <i class="fa fa-ship" ></i>
          <% else %>
            <i class="fa fa-truck fa-flip-horizontal" ></i>
          <% end %>
        <% else %>
          <i class="fa fa-truck fa-flip-horizontal" ></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
