<section class="contact-card">
  <table class="cc-table">
    <tbody>
    <tr>
      <th style="width: 150px;"><%= f.label :no_of_parcels, 'No. of Cartons' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :no_of_parcels, class: 'input-group-field', disabled: true, placeholder: 'Sum from Packages' %>
          <%= f.text_field :no_of_parcels_manual, class: 'input-group-field', placeholder: 'Manually adjust' %>
          <span class="input-group-label" style="flex: 0 0 70px;"></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :gross_weight_amount, 'Gross Weight' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :gross_weight_amount, class: 'input-group-field', disabled: true, placeholder: 'Sum from Packages' %>
          <%= f.text_field :gross_weight_manual_amount, class: 'input-group-field', placeholder: 'Manually adjust' %>
          <%= f.select :weight_unit, options_for_select(::Refinery::Shipping::Shipment::weight_unit_options), {}, class: 'input-group-field js_weight_unit', style: 'flex: 0 0 70px;' %>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :net_weight_amount, 'Net Weight' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :net_weight_amount, class: 'input-group-field', disabled: true, placeholder: 'Sum from Packages' %>
          <%= f.text_field :net_weight_manual_amount, class: 'input-group-field', placeholder: 'Manually adjust' %>
          <span class="input-group-label js_weight_unit_label" style="flex: 0 0 70px;"><%= f.object.weight_unit %></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :chargeable_weight_amount, 'Chargeable Weight' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :chargeable_weight_manual_amount, class: 'input-group-field', placeholder: 'Manually adjust' %>
          <span class="input-group-label js_weight_unit_label" style="flex: 0 0 70px;"><%= f.object.weight_unit %></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :volume_amount, 'Volume' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :volume_amount, class: 'input-group-field', disabled: true, placeholder: 'Sum from Packages' %>
          <%= f.text_field :volume_manual_amount, class: 'input-group-field', placeholder: 'Manually adjust' %>
          <%= f.select :volume_unit, options_for_select(::Refinery::Shipping::Shipment::volume_unit_options), {}, class: 'input-group-field js_volume_unit', style: 'flex: 0 0 70px;' %>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</section>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $(function(){
      $('.js_weight_unit').on('change', function() { $('.js_weight_unit_label').html(this.value) });
      $('.js_volume_unit').on('change', function() { $('.js_volume_unit_label').html(this.value) });
    });
  </script>
<% end %>
