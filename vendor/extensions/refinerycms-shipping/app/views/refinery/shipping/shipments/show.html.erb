<% content_for :body do %>
  <%= render 'toolbar', shipment: @shipment %>

  <div class="grid-x grid-padding-x">
    <div class="medium-8 cell">
      <% if @shipment.shipped_by_courier? %>
        <%= render 'courier_shipment', shipment: @shipment %>
      <% else %>
        <%= render 'forwarder_shipment', shipment: @shipment %>
      <% end %>
    </div>

    <div class="medium-4 cell">
      <%= render 'overview', shipment: @shipment %>
    </div>
  </div>
<% end %>

<%= render '/refinery/content_page' %>
