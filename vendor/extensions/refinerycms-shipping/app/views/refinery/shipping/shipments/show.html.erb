<% content_for :body do %>
  <%= render 'toolbar', shipment: @shipment %>

  <section class="contact-card">
    <h1 class="cc-attribute cc-name">
      <%=raw @shipment.code %>
      <span style="font-size: 1rem; color: #333;">(<%= @shipment.display_status %>)</span>
    </h1>
    <% if @shipment.shipped_by_courier? %>
      <%= render 'courier_shipment', shipment: @shipment %>
    <% else %>
      <%= render 'forwarder_shipment', shipment: @shipment %>
    <% end %>
  </section>
<% end %>

<%= render '/refinery/content_page' %>
