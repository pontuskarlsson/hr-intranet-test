<div class="grid-x grid-padding-x">
  <div class="medium-6 cell">
    <h3>From</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th>Shipper</th>
        <td>
          <% if shipment.shipper_company.present? %>
            <%= link_to shipment.shipper_company_label, refinery.business_company_path(shipment.shipper_company) %>
          <% else %>
            <%= shipment.shipper_company_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th style="width: 150px;">Supplier</th>
        <td>
          <% if shipment.supplier_company.present? %>
            <%= link_to shipment.supplier_company_label, refinery.business_company_path(shipment.supplier_company) %>
          <% else %>
            <%= shipment.supplier_company_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Load Port</th>
        <td><%= shipment.load_port.presence || 'N/A' %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td>
          <% if shipment.from_address %>
            <% if shipment.from_address.google_maps_url %>
              <%= link_to shipment.from_address.google_maps_url, target: '_blank' do %>
                <i class="fa fa-map-marker"></i>
              <% end %>
            <% end %>
            <%=simple_format shipment.from_address.present_address_lines.join("\n") %>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="medium-6 cell">
    <h3>To</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th style="width: 150px;">Receiver</th>
        <td>
          <% if shipment.receiver_company.present? %>
            <%= link_to shipment.receiver_company_label, refinery.business_company_path(shipment.receiver_company) %>
          <% else %>
            <%= shipment.receiver_company_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Consignee</th>
        <td>
          <% if shipment.consignee_company.present? %>
            <%= link_to shipment.consignee_company_label, refinery.business_company_path(shipment.consignee_company) %>
          <% else %>
            <%= shipment.consignee_company_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Consignee Ref.</th>
        <td><%= shipment.consignee_reference.presence || 'N/A' %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td>
          <% if shipment.to_address %>
            <% if shipment.to_address.google_maps_url %>
              <%= link_to shipment.to_address.google_maps_url, target: '_blank' do %>
                <i class="fa fa-map-marker"></i>
              <% end %>
            <% end %>
            <%=simple_format shipment.to_address.present_address_lines.join("\n") %>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="medium-6 cell">
    <h3>Forwarder</h3>
    <table class="cc-table">
      <tbody>
      <tr>
        <th style="width: 150px;">Name</th>
        <td>
          <% if shipment.forwarder_company.present? %>
            <%= link_to shipment.forwarder_company_label, refinery.business_company_path(shipment.forwarder_company) %>
          <% else %>
            <%= shipment.forwarder_company_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Booking No.</th>
        <td><%= shipment.forwarder_booking_number %></td>
      </tr>
      <tr>
        <th>Mode</th>
        <td><%= shipment.mode.presence || 'N/A' %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= shipment.display_status %></td>
      </tr>
      <tr>
        <th>ETD</th>
        <td><%= shipment.etd_date.presence || 'N/A' %></td>
      </tr>
      <tr>
        <th>ETA</th>
        <td><%= shipment.eta_date.presence || 'N/A' %></td>
      </tr>
      <tr>
        <th>AWB</th>
        <td><%= shipment.tracking_number.presence || 'N/A' %></td>
      </tr>
      <tr>
        <th>Shipment Terms</th>
        <td><%= shipment.shipment_terms.presence || 'N/A' %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="grid-x grid-padding-x">
  <div class="medium-6 cell">
    <%= render 'costs', shipment: shipment %>
  </div>

  <div class="medium-6 cell">
    <%= render 'details', shipment: shipment %>
  </div>
</div>
