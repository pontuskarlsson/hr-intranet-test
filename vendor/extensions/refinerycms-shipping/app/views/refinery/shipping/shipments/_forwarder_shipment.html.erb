<%= render 'shipment_progress', shipment: shipment %>

<div class="grid-x grid-padding-x">
  <div class="cell medium-8">
    <% if page_role? ::Refinery::Shipping::ROLE_INTERNAL %>
      <%= render 'edit_details', shipment: shipment %>
    <% else %>
      <%= render 'details', shipment: shipment %>
    <% end %>
  </div>

  <div class="cell medium-4">
    <%= render 'shipment_summary', shipment: shipment %>
  </div>

  <div class="cell">
    <ul class="tabs" data-tabs id="example-tabs">
      <li class="tabs-title <%= shipment.status_is_shipped? ? '' : 'is-active' %>"><a href="#panel1v" aria-selected="true">Booking</a></li>
      <li class="tabs-title <%= shipment.status_is_shipped? ? 'is-active' : '' %>"><a href="#panel2v">Route <i class="fa fa-map-marker"></i></a></li>
      <li class="tabs-title"><a href="#panel3v">Packages</a></li>
      <li class="tabs-title"><a href="#panel4v">Items</a></li>
      <li class="tabs-title"><a href="#panel5v">Costs <i class="fa fa-usd"></i></a></li>
      <li class="tabs-title"><a href="#panel6v">Documents <i class="fa fa-files-o"></i></a></li>
    </ul>
  </div>
  <div class="cell">
    <div class="tabs-content" data-tabs-content="example-tabs">
      <div class="tabs-panel <%= shipment.status_is_shipped? ? '' : 'is-active' %>" id="panel1v">
        <%= render 'booking', shipment: shipment %>
      </div>

      <div class="tabs-panel <%= shipment.status_is_shipped? ? 'is-active' : '' %>" id="panel2v">
        <%= render 'routes', shipment: shipment %>
      </div>

      <div class="tabs-panel" id="panel3v">
        <%= render 'packages', shipment: shipment %>
      </div>

      <div class="tabs-panel" id="panel4v">
        <%= render 'items', shipment: shipment %>
      </div>

      <div class="tabs-panel" id="panel5v">
        <%= render 'costs', shipment: shipment %>
      </div>

      <div class="tabs-panel" id="panel6v">
        <%= render 'documents', shipment: shipment %>
      </div>
    </div>
  </div>
</div>
