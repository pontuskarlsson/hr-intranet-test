<%= form_for shipment, url: [refinery, :shipping, shipment] do |f| %>
<section class="contact-card">
  <h3>Costs</h3>

  <table class="cc-table">
    <tbody>
    <tr>
      <th style="width: 150px;"><%= f.label :rate_currency, 'Currency' %></th>
      <td><%= f.text_field :rate_currency, class: 'js_currency_field' %></td>
    </tr>
    <tr>
      <th><%= f.label :duty_amount, 'Duty' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :duty_amount, class: 'input-group-field' %>
          <span class="input-group-label js_currency_label"><%= f.object.rate_currency %></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :terminal_fee_amount, 'Terminal Fee' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :terminal_fee_amount, class: 'input-group-field' %>
          <span class="input-group-label js_currency_label"><%= f.object.rate_currency %></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :domestic_transportation_cost_amount, 'Domestic Transp.' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :domestic_transportation_cost_amount, class: 'input-group-field' %>
          <span class="input-group-label js_currency_label"><%= f.object.rate_currency %></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :forwarding_fee_amount, 'Forwarding Fee' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :forwarding_fee_amount, class: 'input-group-field' %>
          <span class="input-group-label js_currency_label"><%= f.object.rate_currency %></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :freight_cost_amount, 'Freight Cost' %></th>
      <td>
        <div class="input-group">
          <%= f.text_field :freight_cost_amount, class: 'input-group-field' %>
          <span class="input-group-label js_currency_label"><%= f.object.rate_currency %></span>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</section>

  <div style="margin-top: 1rem;"><%= f.submit 'Save changes', class: 'button' %></div>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript">
      $(function(){
          $('.js_currency_field').on('change', function() { $('.js_currency_label').html(this.value) });
      });
  </script>
<% end %>
