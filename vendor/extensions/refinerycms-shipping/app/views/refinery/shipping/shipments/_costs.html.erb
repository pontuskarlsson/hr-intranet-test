<section class="contact-card">
  <h3>Costs</h3>

  <table class="cc-table">
    <tbody>
    <tr>
      <th style="width: 150px;">Currency</th>
      <td><%= shipment.rate_currency %></td>
    </tr>
    <tr>
      <th>Duty</th>
      <td><%= number_to_currency shipment.duty_amount %></td>
    </tr>
    <tr>
      <th>Terminal Fee</th>
      <td><%= number_to_currency shipment.terminal_fee_amount %></td>
    </tr>
    <tr>
      <th>Domestic Transportation Cost</th>
      <td><%= number_to_currency shipment.domestic_transportation_cost_amount %></td>
    </tr>
    <tr>
      <th>Forwarding Fee</th>
      <td><%= number_to_currency shipment.forwarding_fee_amount %></td>
    </tr>
    <tr>
      <th>Freight Cost</th>
      <td><%= number_to_currency shipment.freight_cost_amount %></td>
    </tr>
    </tbody>
  </table>
</section>
