<%= form_for shipment, url: [refinery, :shipping, shipment] do |f| %>
  <table class="cc-table">
    <tbody>
    <tr>
      <th style="width: 120px;"><%= f.label :forwarder_booking_number, 'Booking No.' %></th>
      <td><%= f.text_field :forwarder_booking_number %></td>
    </tr>
    <tr>
      <th><%= f.label :mode %></th>
      <td><%= f.select :mode, options_for_select([['Please select', { disabled: true }]] + ::Refinery::Shipping::Shipment::SHIP_MODES, f.object.mode) -%></td>
    </tr>
    <tr>
      <th><%= f.label :etd_date, 'ETD' %></th>
      <td><%= f.text_field :etd_date, class: 'js_date_field' %></td>
    </tr>
    <tr>
      <th><%= f.label :eta_date, 'ETA' %></th>
      <td><%= f.text_field :eta_date, class: 'js_date_field' %></td>
    </tr>
    <tr>
      <th><%= f.label :tracking_number, 'AWB' %></th>
      <td><%= f.text_field :tracking_number %></td>
    </tr>
    <tr>
      <th><%= f.label :shipment_terms %></th>
      <td><%= f.text_field :shipment_terms %></td>
    </tr>
    </tbody>
  </table>

  <div style="margin-top: 1rem;"><%= f.submit 'Save changes', class: 'button' %></div>
<% end %>
