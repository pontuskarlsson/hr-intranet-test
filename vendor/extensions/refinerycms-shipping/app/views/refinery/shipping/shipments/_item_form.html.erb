<%= f.fields_for :items, item, child_index: i do |item_form| %>
  <span class="form-addable-remove">
    <% if item.persisted? %>
      <%= item_form.hidden_field :_destroy %>
    <% end %>
    <i class="fa fa-minus-square"></i>
  </span>

  <div class="grid-x grid-padding-x">
    <div class="cell medium-6">
      <%= item_form.text_field :order_label, placeholder: "Order", disabled: item.persisted?, class: 'js_order_field' %>
    </div>

    <div class="cell medium-6">
      <%= item_form.text_field :hs_code_label, placeholder: "HS Code" %>
    </div>
  </div>
<% end %>
