<%= f.fields_for item, child_index: i do |item_form| %>
  <span class="form-addable-remove">
    <% if item.persisted? %>
      <%= item_form.hidden_field :_destroy %>
    <% end %>
    <i class="fa fa-minus-square"></i>
  </span>

  <div class="grid-x grid-padding-x">
    <div class="cell large-6">
      <%= item_form.label :order_label %>
      <%= item_form.text_field :order_label, placeholder: "Order" %>
    </div>
  </div>
<% end %>
