<table style="width: 100%;">
  <tbody>
  <tr>
    <td style="width: 38.3%; vertical-align: bottom;">
      <p style="margin-bottom: 3px; font-weight: 800;">Customer</p>
      <% if company&.contact.present? %>
        <% company.contact.all_address_lines.each do |line| %>
          <p style="line-height: 1rem; margin: 0;"><%= line %></p>
        <% end %>
      <% end %>
    </td>
    <td style="width: 18%; text-align: center;">
      <%= wicked_pdf_image_tag 'Happy_Rabbit_Anchor_Logo_Circle', style: 'width: 88px;' %>
    </td>
    <td style="width: 43.6%; text-align: right;">
      <h1 style="font-size: 32pt; font-weight: 800;"><span class="section"></span></h1>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <%= yield :header_summary %>
    </td>
  </tr>
  </tbody>
</table>
<hr/>
