<table>
  <thead>
  <tr>
    <th>#</th>
    <th>Description</th>
    <th>Ordered Qty</th>
    <th>Qty Unit</th>
    <th>Unit Price</th>
    <th>Total Cost</th>
  </tr>
  </thead>
  <tbody>
  <% order.order_items.order(:line_item_number).each do |order_item| %>
    <tr>
      <td><%= order_item.line_item_number %></td>
      <td><%= order_item.description %></td>
      <td><%= order_item.ordered_qty %></td>
      <td><%= order_item.qty_unit %></td>
      <td><%= order_item.unit_price %></td>
      <td><%=number_to_currency order_item.total_cost, unit: order.currency_code %></td>
    </tr>
  <% end %>
  </tbody>
</table>
