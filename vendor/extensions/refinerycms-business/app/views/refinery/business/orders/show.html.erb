<% content_for :body do %>
  <h2><%= @order.label %></h2>

  <section class="contact-card">
    <table class="cc-table">
      <tbody>
      <tr>
        <th style="width: 150px;">Buyer</th>
        <td>
          <% if @order.buyer.present? %>
            <%= link_to @order.buyer.label, refinery.business_company_path(@order.buyer) %>
          <% else %>
            <%= @order.buyer_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Seller</th>
        <td>
          <% if @order.seller.present? %>
            <%= link_to @order.seller.label, refinery.business_company_path(@order.seller) %>
          <% else %>
            <%= @order.seller_label %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Project</th>
        <td>
          <% if @order.project.present? %>
            <%= link_to @order.project.label, refinery.business_project_path(@order.project) %>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Order No.</th>
        <td><%= @order.order_number %></td>
      </tr>
      <tr>
        <th>Type</th>
        <td><%= @order.display_order_type %></td>
      </tr>
      <tr>
        <th>Order Date</th>
        <td><%= @order.order_date %></td>
      </tr>
      <tr>
        <th>Version</th>
        <td><%= @order.version_number %></td>
      </tr>
      <tr>
        <th>Revised Date</th>
        <td><%= @order.revised_date %></td>
      </tr>
      <tr>
        <th>Reference</th>
        <td><%= @order.reference %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%=simple_format @order.description %></td>
      </tr>
      <tr>
        <th>Delivery Date</th>
        <td><%= @order.delivery_date %></td>
      </tr>
      <tr>
        <th>Delivery Address</th>
        <td><%=simple_format @order.delivery_address %></td>
      </tr>
      <tr>
        <th>Delivery Instructions</th>
        <td><%=simple_format @order.delivery_instructions %></td>
      </tr>
      <tr>
        <th>Ship Mode</th>
        <td><%= @order.ship_mode %></td>
      </tr>
      <tr>
        <th>Shipment Terms</th>
        <td><%= @order.shipment_terms %></td>
      </tr>
      <tr>
        <th>Attention To</th>
        <td><%= @order.attention_to %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= @order.status %></td>
      </tr>
      </tbody>
    </table>

    <h3>Order Items</h3>
    <%= render '/refinery/business/orders/order_items', order: @order, ajax: refinery.business_order_order_items_path(@order) %>

  </section>
<% end %>

<%= render '/refinery/content_page' %>
