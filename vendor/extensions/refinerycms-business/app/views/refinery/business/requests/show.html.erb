<% content_for :body do %>
  <h2><%= @request.label %></h2>

  <div class="grid-x grid-padding-x">
    <div class="cell medium-6">
      <section class="contact-card">
        <table class="cc-table">
          <tbody>
          <tr>
            <th style="width: 150px;">Code</th>
            <td><%= @request.code %></td>
          </tr>
          <tr>
            <th>Subject</th>
            <td><%= @request.subject %></td>
          </tr>
          <tr>
            <th>Company</th>
            <td>
              <% if @request.company.present? %>
                <%= @request.company.name %>
              <% else %>
                N/A
              <% end %>
            </td>
          </tr>
          <tr>
            <th>Created by</th>
            <td><%= @request.created_by_full_name %></td>
          </tr>
          <tr>
            <th>Requested by</th>
            <td><%= @request.requested_by_full_name %></td>
          </tr>
          <tr>
            <th>Date</th>
            <td><%= @request.request_date %></td>
          </tr>
          <tr>
            <th>Status</th>
            <td><%= @request.display_status %></td>
          </tr>
          <tr>
            <th>Type</th>
            <td><%= @request.display_request_type %></td>
          </tr>
          </tbody>
        </table>
      </section>

      <%= render 'documents', request: @request %>
    </div>

    <div class="cell medium-6">
      <%= render 'refinery/addons/comments/comments', commentable: @request, return_to: refinery.business_request_path(@request) %>
    </div>
  </div>
<% end %>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){

    });
  </script>
<% end -%>

<% content_for :stylesheets do -%>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end -%>

<%= render '/refinery/content_page' %>
