<div class="block-css-grid">
  <% request.documents.includes(:resource).each do |document| %>
    <div class="block-card">
      <div class="card-label">File Name</div>
      <div class="card-text" title="<%= document.resource_file_name %>"><%= document.resource_file_name %></div>

      <% unless document.document_type_is_other? %>
        <div class="card-label">Document Type</div>
        <div class="card-text"><%= document.display_document_type %></div>
      <% end %>

      <div class="card-label">Comments</div>
      <div class="card-text"><%= document.comments.presence || 'N/A' %></div>

      <div class="card-text">
        <%= link_to document.resource.url, download: document.resource.file_name do %>
          Download <i class="fa <%= fa_icon_from_mime_type document.resource %>"></i>
        <% end if document.resource.present? %>

        <span style="float: right;">
          <%= link_to refinery.destroy_document_business_request_path(request, document), method: :delete, data: { confirm: t('refinery.business.requests.show.confirm_remove_document') } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </span>
      </div>
    </div>
  <% end %>

  <div>
    <%= link_to 'Add Document', refinery.add_document_business_request_path(request), remote: true, class: 'button' %>
  </div>
</div>
