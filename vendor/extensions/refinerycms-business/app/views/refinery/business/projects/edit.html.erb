<% content_for :body do %>
  <div class="grid-x grid-padding-x">
    <div class="cell">
      <%= form_for @project, url: refinery.business_project_path(@project) do |f| %>
        <div class='field'>
          <%= f.label :code %>
          <%= f.text_field :code %>
        </div>

        <div class='field'>
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>

        <div class='field'>
          <%= f.label :company_label %>
          <%= f.text_field :company_label, class: 'js_company_field' %>
        </div>

        <div class='field'>
          <%= f.label :company_reference %>
          <%= f.text_field :company_reference %>
        </div>

        <div class='field'>
          <%= f.label :start_date %>
          <%= f.date_field :start_date %>
        </div>

        <div class='field'>
          <%= f.label :end_date %>
          <%= f.date_field :end_date %>
        </div>

        <div class='field'>
          <%= f.label :status %>
          <%= f.select :status, options_for_select(::Refinery::Business::Project.status_options, f.object.status) %>
        </div>

        <%= f.submit 'Save', class: 'button' %>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      $('.js_company_field').autocomplete({
        source: <%= ::Refinery::Business::Company.to_source %>
      });
      $('.js_article_field').autocomplete({
        source: <%= ::Refinery::Business::Article.non_voucher.is_public.to_source %>
      });
    });
  </script>
<% end -%>

<% content_for :stylesheets do -%>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end -%>

<%= render '/refinery/content_page' %>
