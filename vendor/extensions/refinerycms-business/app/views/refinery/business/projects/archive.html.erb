<% content_for :body do %>
  <div class="grid-x grid-padding-x">
    <div class="cell">
      <% if page_role? Refinery::Business::ROLE_INTERNAL %>
        <%= render 'add_project', project: @project %>
      <% end %>

      <%= link_to 'Show current Projects', refinery.business_projects_path, class: 'button' %>

      <%= render 'table', projects: @projects, table_id: 'js_archive_data_table', ajax: refinery.archive_business_projects_path(filter_params) %>
    </div>
  </div>

<% end %>

<%= render '/refinery/content_page' %>
