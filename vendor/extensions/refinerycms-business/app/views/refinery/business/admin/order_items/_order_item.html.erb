<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order_item) -%>">
  <span class='title'>
    <%= order_item.label %>
    <span class="preview">
      <%= t('.preview', article_code: order_item.article_code) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_business_admin_order_item_path(order_item), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_order_item_path(order_item), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: order_item.label)}}  ) %>
  </span>
</li>
