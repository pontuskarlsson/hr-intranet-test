<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(invoice) -%>">
  <span class='title'>
    <%= invoice.label %>
    <span class="preview">
      <%= t('.preview') %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, invoice.invoice_type_is_accrec? ? refinery.business_invoice_path(invoice) : refinery.business_bill_path(invoice), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_business_admin_invoice_path(invoice), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_invoice_path(invoice), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: invoice.label)}}  ) %>
  </span>
</li>
