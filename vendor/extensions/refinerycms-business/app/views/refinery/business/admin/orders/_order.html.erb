<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order) -%>">
  <span class='title'>
    <%= order.label %>
    <span class="preview">
      <%= t('.preview', reference: order.reference, description: order.description) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.business_order_path(order), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_business_admin_order_path(order), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_order_path(order), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: order.label)}}  ) %>
  </span>
</li>
