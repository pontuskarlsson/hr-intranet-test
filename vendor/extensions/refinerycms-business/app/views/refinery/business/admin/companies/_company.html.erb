<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(company) -%>">
  <span class='title'>
    <%= company.code %>
    <span class="preview">
      <%= t('.preview', name: company.name) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.business_company_path(company), t('.view_live_html')) %>
    <%= action_icon(:edit, refinery.edit_business_admin_company_path(company), t('.edit')) %>
    <%= action_icon(:delete, refinery.business_admin_company_path(company), t('.delete'),
        { :class => "cancel confirm-delete",
          data: { :confirm => t('message', :scope => 'refinery.admin.delete', :title => company.code)}}) %>
  </span>
</li>
