<%= form_for [refinery, :business_admin, @company] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @company,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :contact_label -%>
    <%= f.text_field :contact_label, :class => 'js_contact_field' -%>
  </div>

  <div class='field'>
    <%= f.label :code -%>
    <%= f.text_field :code -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <h5 style="margin-bottom: 0;">Company Users</h5>
  <% @company.company_users.each_with_index do |company_user, i| %>
    <%= f.fields_for :company_users, company_user, child_index: i do |cu_form| %>
      <div class='field'>
        <%= cu_form.label :_destroy, style: 'margin-top: 0;' do -%>
          <%= company_user.user.full_name %> (<%= company_user.user.email %>)
          <%= cu_form.check_box :_destroy -%>
          Remove
        <% end %>
      </div>
    <% end %>
  <% end %>

  <%= f.fields_for :company_users, ::Refinery::Business::CompanyUser.new, child_index: @company.company_users.length do |cu_form| %>
    <div class='field'>
      <%= cu_form.text_field :new_user_email, class: 'js_user_field', placeholder: 'Add user' -%>
    </div>
  <% end %>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.business.admin.companies.company'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @company.code) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');

      $('.js_contact_field').autocomplete({
        source: <%= ::Refinery::Marketing::Contact.organisations.to_source %>
      });

      $('.js_user_field').autocomplete({
        source: <%= ::Refinery::Authentication::Devise::User.pluck(:email).to_json.html_safe %>
      });
    });
  </script>
<% end -%>
