<ul>
  <% if ::Refinery::Business::Admin::ArticlesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.business_admin_articles_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_business_admin_article_path,
                 :class => "add_icon" %>
  </li>
  <%= render '/refinery/business/admin/shared/links' %>

<% if !searching? && ::Refinery::Business::Admin::ArticlesController.sortable? && ::Refinery::Business::Article.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Articles"),
                 refinery.business_admin_articles_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Articles"),
                 refinery.business_admin_articles_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
