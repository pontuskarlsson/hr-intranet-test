<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(article) -%>">
  <span class='title'>
    <%= article.code %>
    <span class="preview">
      <%= t('.preview', name: article.name) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_business_admin_article_path(article), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_article_path(article), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: article.code)}}  ) %>
  </span>
</li>
