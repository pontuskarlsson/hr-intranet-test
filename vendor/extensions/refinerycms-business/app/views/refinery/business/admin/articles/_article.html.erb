<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(article) -%>">
  <span class='title'>
    <%= article.code %>
    <span class="preview">
      <%= t('.preview', name: article.name) %>
    </span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_business_admin_article_path(article),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.business_admin_article_path(article),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => article.code),
        :method => :delete %>
  </span>
</li>
