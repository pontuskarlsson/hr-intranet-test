<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(billable) -%>">
  <span class='title'>
    <%= billable.label %>
    <span class="preview">
      <%= t('.preview', billable_date: billable.billable_date, assigned_to_label: billable.assigned_to_label) %>
    </span>
  </span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.business_billable_path(billable), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_business_admin_billable_path(billable), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_billable_path(billable), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: billable.label)}}  ) %>
  </span>
</li>
