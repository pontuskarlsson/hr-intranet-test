<ul>
  <% if ::Refinery::Business::Admin::SectionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.business_admin_sections_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_business_admin_section_path,
                 :class => "add_icon" %>
  </li>
  <%= render '/refinery/business/admin/shared/links' %>

<% if !searching? && ::Refinery::Business::Admin::SectionsController.sortable? && ::Refinery::Business::Section.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Sections"),
                 refinery.business_admin_sections_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Sections"),
                 refinery.business_admin_sections_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
