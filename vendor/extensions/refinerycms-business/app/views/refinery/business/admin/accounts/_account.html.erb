<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(account) -%>">
  <span class='title'>
    <%= account.organisation %>
    <span class="preview">
      <%= t('.preview') %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.business_account_path(account), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_business_admin_account_path(account), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_account_path(account), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: account.organisation)}}  ) %>
  </span>
</li>
