<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(account) -%>">
  <span class='title'>
    <%= account.organisation %>
    <span class="preview">
      <%= t('.preview') %>
    </span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_business_admin_account_path(account),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.business_admin_account_path(account),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => account.organisation),
        :method => :delete %>
  </span>
</li>
