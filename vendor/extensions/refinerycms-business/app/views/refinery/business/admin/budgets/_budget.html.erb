<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(budget) -%>">
  <span class='title'>
    <%= budget.description %>
    <span class="preview">
      <%= t('.preview', customer: budget.customer_name) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.business_budget_path(budget), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_business_admin_budget_path(budget), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_budget_path(budget), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: budget.description)}}  ) %>
  </span>
</li>
