<%= form_for [refinery, :business_admin, @account] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @account,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :organisation -%>
    <%= f.text_field :organisation -%>
  </div>

  <div class='field'>
    <%= f.label :key_content -%>
    <%= f.text_area :key_content -%>
  </div>

  <div class='field'>
    <%= f.label :consumer_key -%>
    <%= f.text_field :consumer_key -%>
  </div>

  <div class='field'>
    <%= f.label :consumer_secret -%>
    <%= f.text_field :consumer_secret -%>
  </div>

  <div class='field'>
    <%= f.label :encryption_key -%>
    <%= f.text_field :encryption_key -%>
  </div>

  <div class='field'>
    <%= f.label :bank_details -%>
    <%= f.text_area :bank_details -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.business.admin.accounts.account'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @account.organisation) -%>
<% end -%>

<% content_for :stylesheets do %>

<% end %>

<% content_for :javascripts do -%>

<% end -%>
