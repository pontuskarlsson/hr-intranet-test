<%= form_for [refinery, :business_admin, @section] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @section,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :project_label -%>
    <%= f.text_field :project_label, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :section_type -%>
    <%= f.select :section_type, options_for_select(Section::TYPES, @section.section_type) -%>
  </div>

  <div class='field'>
    <%= f.label :start_date -%>
    <%= f.date_select :start_date -%>
  </div>

  <div class='field'>
    <%= f.label :end_date -%>
    <%= f.date_select :end_date -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:billing_address, :delivery_address],
                :object => 'business/section' -%>
  </div>

  <div class='field'>
    <%= f.label :modified_date -%>
    <%= f.date_select :modified_date -%>
  </div>

  <div class='field'>
    <%= f.label :total -%>
    <%= f.text_field :total -%>
  </div>

  <div class='field'>
    <%= f.label :currency_name -%>
    <%= f.text_field :currency_name -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.business.admin.sections.section'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @section.description) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
