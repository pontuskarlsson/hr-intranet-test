<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(project) -%>">
  <span class='title'>
    <%= project.code %>
    <span class="preview">
      <%= t('.preview', description: project.description, company_label: project.company_label, status: project.status) %>
    </span>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.business_project_path(project),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_business_admin_project_path(project),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.business_admin_project_path(project),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => project.code),
        :method => :delete %>
  </span>
</li>
