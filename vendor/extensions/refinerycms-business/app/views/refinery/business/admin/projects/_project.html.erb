<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(project) -%>">
  <span class='title'>
    <%= project.code %>
    <span class="preview">
      <%= t('.preview', description: project.description, company_label: project.company_label, status: project.status) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.business_project_path(project), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_business_admin_project_path(project), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_project_path(project), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: project.code)}}  ) %>
  </span>
</li>
