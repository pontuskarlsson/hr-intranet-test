<%= form_for [refinery, :business_admin, @budget] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @budget,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.business.admin.budgets.budget'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @budget.description) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
