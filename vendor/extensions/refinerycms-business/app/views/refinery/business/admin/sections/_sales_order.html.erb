<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(section) -%>">
  <span class='title'>
    <%= section.description %>
    <span class="preview">
      <%= t('.preview', total: section.total, currency_name: section.currency_name, :modified_date => (section.modified_date.present? ? l(section.modified_date, :format => :short) : nil)) %>
    </span>
  </span>
  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_business_admin_section_path(section), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.business_admin_section_path(section), t('.delete'),
                    { class: "cancel confirm-delete",
                      data: {confirm: t('message',  scope: 'refinery.admin.delete', title: section.label)}}  ) %>
  </span>
</li>
