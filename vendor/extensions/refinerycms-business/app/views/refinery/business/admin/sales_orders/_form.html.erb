<%= form_for [refinery, :business_admin, @sales_order] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @sales_order,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :order_ref -%>
    <%= f.text_field :order_ref, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:billing_address, :delivery_address],
                :object => 'business/sales_order' -%>
  </div>

  <div class='field'>
    <%= f.label :modified_date -%>
    <%= f.date_select :modified_date -%>
  </div>

  <div class='field'>
    <%= f.label :total -%>
    <%= f.text_field :total -%>
  </div>

  <div class='field'>
    <%= f.label :currency_name -%>
    <%= f.text_field :currency_name -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.business.admin.sales_orders.sales_order'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @sales_order.order_ref) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
