<table class="display" cellspacing="0" style="width: 100%;">
  <thead>
  <tr>
    <th></th>
    <th>Inv. No.</th>
    <th>Reference</th>
  </tr>
  </thead>

  <tfoot>
  <tr>
    <th></th>
    <th>Inv. No.</th>
    <th>Reference</th>
  </tr>
  </tfoot>

  <tbody>
  <% @invoices.each do |invoice| %>
    <tr>
      <td>
        <%= link_to refinery.business_invoice_path(invoice) do %>
          <i class="fa fa-arrow-right"></i>
        <% end %>
      </td>
      <td>
        <%= invoice.invoice_number %>
      </td>
      <td>
        <%= invoice.reference %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
