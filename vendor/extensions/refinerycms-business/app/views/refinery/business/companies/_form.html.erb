<%= form_for [refinery, :business, company] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => company,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'js_contact_field' -%>
  </div>

  <div class='field'>
    <%= f.submit 'Save', class: 'button primary' -%>
  </div>
<% end -%>

<% content_for :stylesheets do -%>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      <% if current_refinery_user.has_role?(::Refinery::Business::ROLE_INTERNAL) %>
        $('.js_contact_field').autocomplete({
          source: <%= ::Refinery::Marketing::Contact.organisations.without_code.to_source %>
        });
      <% end %>
    });
  </script>
<% end -%>
