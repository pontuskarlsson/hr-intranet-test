<% content_for :body do %>
  <h1>Companies</h1>

  <% if @companies.any? %>

    <%= render 'table', companies: @companies %>

  <% else %>
    <p class="not_present">
      You do not have access to any company details, please contact
      Happy Rabbit Support team if you think this is incorrect.
    </p>
  <% end %>
<% end %>

<% if page_role? Refinery::Business::ROLE_INTERNAL %>
  <% content_for :side_body do %>
    <%= link_to 'Add a new Company', refinery.new_business_company_path %>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
