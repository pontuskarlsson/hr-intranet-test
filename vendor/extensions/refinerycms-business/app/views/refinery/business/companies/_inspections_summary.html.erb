<div class="cell medium-6">

  <div class="card">
    <div class="card-divider">
      <h4>Top Defects</h4>
    </div>

    <div class="card-section">
      <%= pie_chart inspections.top_defects %>
    </div>
  </div>
</div>

<div class="cell medium-6">
  <div class="card">
    <div class="card-divider">
      <h4>Pass rate</h4>
    </div>

    <div class="card-section">
      <div class="grid-x grid-padding-x">
        <div class="cell medium-6">
          <h5>By Qty</h5>
          <%= pie_chart inspections.pass_rate_qty %>
        </div>

        <div class="cell medium-6">
          <h5>By no. of inspections</h5>
          <%= pie_chart inspections.pass_rate_inspections %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="cell medium-6">
  <%= render 'inspections', inspections: @company.inspections.recent(10) %>
</div>
