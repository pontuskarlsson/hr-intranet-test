<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <%= render 'layouts/pdf/shared_layout' %>

  <%= yield :head %>

  <script>
    function number_pages() {
      var vars={};
      var x=document.location.search.substring(1).split('&');
      for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
      var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
      for(var i in x) {
        var y = document.getElementsByClassName(x[i]);
        for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
      }
    }
  </script>
</head>
<body onload="number_pages()">
<table style="width: 100%;">
  <tbody>
  <tr>
    <td style="width: 38.3%; vertical-align: bottom;">
      <p style="margin-bottom: 3px; font-weight: 800;">Customer</p>
      <% if (company = local_assigns[:company]).present? %>
        <p style="line-height: 1rem; margin: 0;"><%= company.name %></p>

        <% if company.contact&.br_number.present? %>
          <p style="line-height: 1rem; margin: 0;">BR No. <%= company.contact.br_number %></p>
        <% end %>

        <% if (address = company.contact&.billing_address).present? %>
          <% address.all_address_lines.each do |line| %>
            <p style="line-height: 1rem; margin: 0;"><%= line %></p>
          <% end %>
        <% end %>
      <% end %>
    </td>
    <td style="width: 18%; text-align: center; vertical-align: top;">
      <div style="height: 165px;">
        <%= wicked_pdf_image_tag 'Happy_Rabbit_Anchor_Logo_Circle', style: 'width: 88px;' %>
      </div>
    </td>
    <td style="width: 43.6%; text-align: right; vertical-align: top;">
      <h1 style="font-size: 32pt; font-weight: 800;"><span class="section"></span></h1>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div style="height: 53px">
        <%= yield :header_summary %>
      </div>
    </td>
  </tr>
  </tbody>
</table>
<hr/>
</body>
</html>
