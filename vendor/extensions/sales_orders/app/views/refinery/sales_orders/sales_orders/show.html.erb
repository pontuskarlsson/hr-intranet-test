<div class="row">

  <div class="medium-9 columns">
    <section>
      <h1>Order Id: <%=raw @sales_order.order_id %></h1>
    </section>

    <div class="row">
      <div class="medium-4 columns">
        <h3>Contact</h3>

        <h4><small>First Name</small></h4>
        <p><%= @sales_order.first_name %></p>

        <h4><small>Last Name</small></h4>
        <p><%= @sales_order.last_name %></p>

        <h4><small>Company</small></h4>
        <p><%= @sales_order.company %></p>

        <h4><small>Phone</small></h4>
        <p><%= @sales_order.phone %></p>

        <h4><small>Mobile</small></h4>
        <p><%= @sales_order.mobile %></p>

        <h4><small>Email</small></h4>
        <p><%= @sales_order.email %></p>

      </div>

      <div class="medium-4 columns">
        <h3>Delivery Address</h3>

        <h4><small>First Name</small></h4>
        <p><%= @sales_order.delivery_first_name %></p>

        <h4><small>Last Name</small></h4>
        <p><%= @sales_order.delivery_last_name %></p>

        <h4><small>Company</small></h4>
        <p><%= @sales_order.delivery_company %></p>

        <h4><small>Delivery Address 1</small></h4>
        <p><%= @sales_order.delivery_address %></p>

        <h4><small>Delivery Address 2</small></h4>
        <p><%= @sales_order.delivery_suburb %></p>

        <h4><small>City</small></h4>
        <p><%= @sales_order.delivery_city %></p>

        <h4><small>Postal Code</small></h4>
        <p><%= @sales_order.delivery_postal_code %></p>

        <h4><small>State</small></h4>
        <p><%= @sales_order.delivery_state %></p>

        <h4><small>Country</small></h4>
        <p><%= @sales_order.delivery_country %></p>
      </div>

      <div class="medium-4 columns">
        <h3>Billing Address</h3>

        <h4><small>First Name</small></h4>
        <p><%= @sales_order.billing_first_name %></p>

        <h4><small>Last Name</small></h4>
        <p><%= @sales_order.billing_last_name %></p>

        <h4><small>Company</small></h4>
        <p><%= @sales_order.billing_company %></p>

        <h4><small>Delivery Address 1</small></h4>
        <p><%= @sales_order.billing_address %></p>

        <h4><small>Delivery Address 2</small></h4>
        <p><%= @sales_order.billing_suburb %></p>

        <h4><small>City</small></h4>
        <p><%= @sales_order.billing_city %></p>

        <h4><small>Postal Code</small></h4>
        <p><%= @sales_order.billing_postal_code %></p>

        <h4><small>State</small></h4>
        <p><%= @sales_order.billing_state %></p>

        <h4><small>Country</small></h4>
        <p><%= @sales_order.billing_country %></p>
      </div>
    </div>

    <h4><small>Order Items</small></h4>
    <% if @sales_order.order_items.any? %>
      <table>
        <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Option1</th>
          <th>Option2</th>
          <th>Option3</th>
          <th>Qty</th>
          <th>Unit Price</th>
          <th>Total</th>
        </tr>
        <% @sales_order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.code %></td>
            <td><%= order_item.name %></td>
            <td><%= order_item.option1 %></td>
            <td><%= order_item.option2 %></td>
            <td><%= order_item.option3 %></td>
            <td><%= order_item.qty %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.total %> <%= @sales_order.currency_name %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <p class="italic">No Items added.</p>
    <% end %>
  </div>

  <div class="medium-3 columns">
    <aside>
      <h2><%= t('.other') %></h2>
      <ul id="sales_orders">
        <% @sales_orders.each do |sales_order| %>
          <li>
            <%= link_to sales_order.order_id, refinery.sales_orders_sales_order_path(sales_order) %>
          </li>
        <% end %>
      </ul>
    </aside>
  </div>

</div>
