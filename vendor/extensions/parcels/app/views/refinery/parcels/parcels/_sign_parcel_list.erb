<table>
  <tr>
    <th>Date</th>
    <th>From</th>
    <th>Courier</th>
    <th>Air Waybill No</th>
    <th>Addressed To</th>
    <th>Assigned To</th>
    <th>Actions</th>
  </tr>
  <% if parcels.any? %>
    <% parcels.each do |parcel| %>
      <tr>
        <td><%= parcel.parcel_date.strftime('%d %b, %Y') %></td>
        <td><%= parcel.from_contact.present? ? link_to(parcel.from_contact.name, refinery.contacts_contact_path(parcel.from_contact)) : parcel.from_name %></td>
        <td><%= parcel.courier %></td>
        <td><%= parcel.air_waybill_no %></td>
        <td><%= parcel.to_name %></td>
        <td><%= parcel.assigned_to.full_name %></td>
        <td>
          <%= link_to 'Sign', refinery.sign_parcels_parcel_path(parcel), remote: true %>
          or
          <%= link_to 'Pass On', refinery.pass_on_parcels_parcel_path(parcel), remote: true %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="6" class="italic">No parcels found</td>
    </tr>
  <% end %>
</table>