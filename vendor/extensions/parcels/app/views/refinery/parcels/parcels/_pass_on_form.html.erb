<div title="Pass on Parcel to someone else" style="min-width: 10rem;">
  <%= form_for @parcel, url: refinery.parcels_parcel_path(@parcel) do |f| %>
    <div class="field">
      <h4><small>Parcel Date</small></h4>
      <%= @parcel.parcel_date.strftime('%d %b, %Y') %>
    </div>
    <div class="field">
      <h4><small>From</small></h4>
      <%= @parcel.from_name %>
    </div>
    <div class="field">
      <h4><small>Courier</small></h4>
      <%= @parcel.courier %>
    </div>
    <div class="field">
      <h4><small>Air Waybill No.</small></h4>
      <%= @parcel.air_waybill_no %>
    </div>

    <div class='field'>
      <%= f.label :given_to, 'Assign To' -%>
      <%= f.text_field :given_to, value: '', class: 'js_given_to_field' -%>
    </div>

    <p><%= f.submit 'Pass on', class: 'button round tiny' %></p>
  <% end %>
</div>
