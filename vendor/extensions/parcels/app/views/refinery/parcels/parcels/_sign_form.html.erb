<div title="Sign for receival of Parcel" style="min-width: 10rem;">
  <%= form_for @parcel, url: refinery.parcels_parcel_path(@parcel) do |f| %>
    <%= f.hidden_field :receiver_signed, value: '1' %>

    <div class="field">
      <h4><small>Parcel Date</small></h4>
      <%= @parcel.parcel_date.strftime('%d %b, %Y') %>
    </div>
    <div class="field">
      <h4><small>From</small></h4>
      <%= @parcel.from_name %>
    </div>
    <div class="field">
      <h4><small>Courier</small></h4>
      <%= @parcel.courier %>
    </div>
    <div class="field">
      <h4><small>Air Waybill No.</small></h4>
      <%= @parcel.air_waybill_no %>
    </div>

    <div class="field">
      <%= f.label :description, 'Content Description' %>
      <%= f.text_field :description, placeholder: 'What was inside the Parcel?' %>
    </div>

    <p><%= f.submit 'Sign', class: 'button round tiny' %></p>
  <% end %>
</div>
