<ul>
  <% if ::Refinery::Parcels::Admin::ParcelsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.parcels_admin_parcels_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_parcels_admin_parcel_path,
                 :class => "add_icon" %>
  </li>
  <%= render '/refinery/parcels/admin/shared/links' %>

<% if !searching? && ::Refinery::Parcels::Admin::ParcelsController.sortable? && ::Refinery::Parcels::Parcel.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Parcels"),
                 refinery.parcels_admin_parcels_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Parcels"),
                 refinery.parcels_admin_parcels_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
