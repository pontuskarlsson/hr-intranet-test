<% if shipment.courier.blank? %>
  <label>Courier
    <%= f.select :courier, options_for_select(::Refinery::Parcels::Shipment.easypost_couriers), include_blank: true %>
  </label>

  <div class="grid-x grid-padding-x">
    <div class="cell">
      <p><%= f.submit 'Select', class: 'button tiny' %></p>
    </div>
  </div>

<% elsif shipment.easypost_object_id.blank? %>

  <%= render 'easypost_parcels', f: f, shipment: shipment %>

<% else %>

  <%= render 'easypost_rates', f: f, shipment: shipment %>

<% end %>
