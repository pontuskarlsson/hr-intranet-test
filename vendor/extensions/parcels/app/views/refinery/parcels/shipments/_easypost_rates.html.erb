<div class="row">
  <div class="columns">
    Select Rate
  </div>
</div>

<table>
  <thead>
  <tr>
    <th style="width: 10%;">&nbsp;</th>
    <th style="width: 60%;">Service</th>
    <th colspan="2" style="width: 30%;">Cost /<br/>Delivery Days</th>
  </tr>
  </thead>
  <tbody>
  <% shipment.rates_content.each do |rate_hash| %>
    <tr>
      <td><%= f.radio_button :rate_id, rate_hash[:id] %></td>
      <td><%= rate_hash[:service] %></td>
      <td style="width: 20%;"><%= rate_hash[:rate] %> <%= rate_hash[:currency] %></td>
      <td style="width: 10%;"><%= rate_hash[:delivery_days] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="columns">
    <p><%= f.submit 'Purchase Shipment', class: 'button tiny' %></p>
  </div>
</div>
