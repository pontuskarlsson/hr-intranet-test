<% content_for :body do %>
  <h4>Add Shipment</h4>

  <section class="add_shipment">
    <%= render 'quick_form', shipment: @shipment %>
  </section>

  <section>
    <table class="display js_shipments_data_table" cellspacing="0" style="width: 100%;">
      <thead>
      <tr>
        <th>&nbsp;</th>
        <th>From</th>
        <th>To</th>
        <th>Courier</th>
        <th>Tracking No.</th>
        <th>Status</th>
        <th>Shipping Date</th>
      </tr>
      </thead>

      <tbody>
        <% @shipments.each do |shipment| %>
          <tr>
            <td><%= link_to 'View', refinery.parcels_shipment_path(shipment) %></td>
            <td><%= shipment.from_address_name %></td>
            <td><%= shipment.to_address_name %></td>
            <td><%= shipment.courier %></td>
            <td><%= shipment.tracking_number %></td>
            <td><%= shipment.status %></td>
            <td><%= shipment.shipping_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>

<% end %>

<%= render '/refinery/content_page' %>
