<% if shipment.bill_to_account_id.blank? %>
  <% if shipment.available_accounts.any? %>
    <label>Receiver Account
      <%= f.select :bill_to_account_id, options_from_collection_for_select(shipment.available_accounts, :id, :account_and_description) %>
    </label>

    <div class="row">
      <div class="columns">
        <p><%= f.submit 'Select', class: 'button tiny' %></p>
      </div>
    </div>
  <% else %>
    <p>There are no available Accounts to Bill the Receiver with</p>
  <% end %>

<% elsif shipment.easypost_object_id.blank? %>

  <%= render 'easypost_parcels', f: f, shipment: shipment %>

<% else %>

  <%= render 'easypost_rates', f: f, shipment: shipment %>

<% end %>
