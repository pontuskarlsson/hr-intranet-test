<%- (i = 0) -%>
<%= f.fields_for :shipment_parcels do |sp_form| %>
  <h4>Parcel #<%= i += 1 %></h4>
  <label>Description
    <%= sp_form.text_field :description %>
  </label>

  <% if shipment.courier_predefined_packages.any? %>
    <div class="row">
      <div class="medium-6 columns">
        <label>Package Type
          <%= sp_form.select :predefined_package, options_for_select(shipment.courier_predefined_packages), include_blank: true %>
        </label>
      </div>

      <div class="medium-6 columns">
        <div class="row collapse">
          <label>Weight</label>
          <div class="small-9 columns">
            <%= sp_form.number_field :weight, step: 'any' %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">Kg</span>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <div class="row">
      <div class="medium-6 columns">
        <div class="row collapse">
          <label>Length</label>
          <div class="small-9 columns">
            <%= sp_form.number_field :length, step: 'any' %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">cm</span>
          </div>
        </div>
      </div>

      <div class="medium-6 columns">
        <div class="row collapse">
          <label>Height</label>
          <div class="small-9 columns">
            <%= sp_form.number_field :height, step: 'any' %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">cm</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="row collapse">
          <label>Width</label>
          <div class="small-9 columns">
            <%= sp_form.number_field :width, step: 'any' %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">cm</span>
          </div>
        </div>
      </div>

      <div class="medium-6 columns">
        <div class="row collapse">
          <label>Weight</label>
          <div class="small-9 columns">
            <%= sp_form.number_field :weight, step: 'any' %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">Kg</span>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if shipment.international? %>
    <%= render 'customs_form', f: sp_form %>
  <% end %>
<% end %>

<div class="row">
  <div class="columns">
    <p><%= f.submit 'Update Parcels', class: 'button tiny' %></p>
  </div>
</div>
