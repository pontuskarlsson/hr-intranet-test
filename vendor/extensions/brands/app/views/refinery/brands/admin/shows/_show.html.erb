<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(show) -%>">
  <span class='title'>
    <%= show.name %>

  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_brands_admin_show_path(show),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.brands_admin_show_path(show),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => show.name),
        :method => :delete %>
  </span>
</li>
