<% content_for :body do %>

  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="cell medium-3">
        <ul class="vertical tabs" data-tabs id="example-tabs">
          <li class="tabs-title is-active"><a href="#panel1v" aria-selected="true">Profile</a></li>
          <li class="tabs-title"><a href="#panel2v" aria-selected="true">Authorizations</a></li>
        </ul>
      </div>
      <div class="cell medium-9">
        <div class="tabs-content" data-tabs-content="example-tabs">
          <div class="tabs-panel is-active" id="panel1v">
            <%= form_for current_refinery_user, url: my_profile_path do |f| %>
              <div class="grid-x grid-padding-x">
                <div class="cell medium-6">
                  <div class='field'>
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name %>
                  </div>
                </div>

                <div class="cell medium-6">
                  <div class='field'>
                    <%= f.label :Last_name %>
                    <%= f.text_field :last_name %>
                  </div>
                </div>

                <div class="cell medium-6">
                  <div class='field'>
                    <%= f.label :timezone %>
                    <%= f.time_zone_select :timezone %>
                  </div>
                </div>
              </div>

              <%= f.submit 'Save Changes', class: 'button primary' %>
            <% end %>
          </div>

          <div class="tabs-panel" id="panel2v">
            <%= render 'authorized_applications' %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render '/refinery/content_page' %>
