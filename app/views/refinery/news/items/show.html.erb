<div class="grid-x grid-padding-x">
  <div class="medium-8 cell">
    <article class="news_item">
      <h4><%= @item.title %></h4>
      <p>
        <small><%= t('.published') %> <%= l(@item.publish_date, :format => :long) %></small>
      </p>
      <% if @item.source.present? %>
        <p>
          <small><%= t('.source') %> <%= @item.source %></small>
        </p>
      <% end %>
      <%= @item.body.html_safe %>
      <p>
        <%= link_to t('.back_to_index'), refinery.news_items_path %>
      </p>
    </article>
  </div>

  <div class="medium-4 cell">
    <%= raw @page.content_for(:side_body) %>

    <%= render '/refinery/news/shared/body_content_right' %>
  </div>
</div>
