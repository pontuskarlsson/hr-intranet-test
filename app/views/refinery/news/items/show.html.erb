<% content_for :meta do %>
  <%= raw %(<meta property="twitter:card" content="summary">) -%>
  <%= raw %(<meta property="og:title" content="#{@item.title}">) -%>
  <%= raw %(<meta property="og:description" content="#{'' || @item.meta_description}">) -%>
  <% if false && (image = @post.images.first).present? %>
    <%= raw %(<meta property="og:image" content="#{image.image.thumb('1200x630#c').url(host: WWWSubdomain.host)}">) -%>
    <%= raw %(<meta property="twitter:image" content="#{image.image.thumb('280x150#c').url(host: WWWSubdomain.host)}">) -%>
  <% end %>
  <%= raw %(<meta property="og:url" content="#{refinery.news_item_url(@item)}">) -%>
<% end %>

<% content_for :body do %>
  <div id="show_blog_post">
    <%= render 'item' %>
  </div>
<% end %>

<%= render "/refinery/public_content_page", :remove_automatic_sections => true %>

<% content_for :stylesheets, stylesheet_link_tag('refinery/blog/frontend') %>
