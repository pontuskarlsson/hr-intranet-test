<div class="grid-x grid-padding-x">
  <div class="cell medium-8 medium-offset-2 large-6 large-offset-3">
    <h2 class="text-align-center"><%= t 'devise.invitations.edit.header' %></h2>

    <%= form_for resource, :as => resource_name, :url => '/refinery/users/invitation', :html => { :method => :put } do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>

      <% if f.object.class.require_password_on_accepting %>
        <div class='field'>
          <%= f.label :password -%>
          <%= f.password_field :password %>
        </div>

        <div class='field'>
          <%= f.label :password_confirmation -%>
          <%= f.password_field :password_confirmation %>
        </div>
      <% end %>

      <p class="text-align-center"><%= f.submit t("devise.invitations.edit.submit_button"), class: 'button primary' %></p>
    <% end %>
  </div>
</div>
