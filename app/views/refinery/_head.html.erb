<meta charset='<%= Rails.application.config.encoding %>' />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/png" href="/favicon.png">
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
<title><%= browser_title(yield(:title)) %></title>
<%= raw %(<meta name="description" content="#{@meta.meta_description}" />) if @meta.meta_description.present? -%>
<%= raw %(<link rel="canonical" content="#{@canonical}" />) if @canonical.present? -%>
<%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
<%= tag :meta, name: 'filter-params', content: filter_params.to_json %>
<%= yield :meta %>

<%= stylesheet_link_tag 'foundation_and_overrides_portal' %>

<%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/motion-ui@1.2.3/dist/motion-ui.min.css', rel: 'preload', as: 'style', onload: "this.onload=null;this.rel='stylesheet'" %>
<%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/motion-ui@1.2.3/dist/motion-ui.min.css' # Duplicate declaration afterwards because no support for preload in FireFox
%>

<%= stylesheet_link_tag "application" %>

<%= stylesheet_link_tag 'fonts', rel: 'preload', as: 'style', onload: "this.onload=null;this.rel='stylesheet'" %>
<%= stylesheet_link_tag 'fonts' # Duplicate declaration afterwards because no support for preload in FireFox
%>

<%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel: 'preload', as: 'style', onload: "this.onload=null;this.rel='stylesheet'" %>
<%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' # Duplicate declaration afterwards because no support for preload in FireFox
%>

<%= yield :stylesheets %>

<%= render '/refinery/google_analytics' %>
<%= render '/refinery/facebook_pixel' %>

<%= javascript_include_tag 'modernizr-min' %>
<%= javascript_include_tag 'application' %>
