<table class="display js_companies_data_table" cellspacing="0" style="width: 100%;">
  <thead>
  <tr>
    <th></th>
    <th>Code</th>
    <th>Name</th>
    <th>Website</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Country</th>
  </tr>
  </thead>

  <tfoot>
  <tr>
    <th></th>
    <th>Code</th>
    <th>Name</th>
    <th>Website</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Country</th>
  </tr>
  </tfoot>
</table>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '//cdn.datatables.net/plug-ins/a5734b29083/integration/foundation/dataTables.foundation.css' %>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" src="https://cdn.datatables.net/v/zf/dt-1.10.18/datatables.min.js"></script>

  <script type="text/javascript">
    $(function(){
      $('.js_companies_data_table').dataTable({
        "scrollCollapse": true,
        "paging":         true,
        "ajax": "<%= refinery.business_companies_path %>",
        "columns": [
          { data: "id", "width": '5%', "render": function(data, type, row) {
            const href = ["<%= refinery.business_companies_path %>", row.id].join('/');
            const className = 'fa fa-arrow-right';
            return $('<a></a>')
              .attr('href', href)
              .html('<i class="' + className + '"></i>')
              .prop('outerHTML');
          } },
          { data: "code", "width": '10%' },
          { data: "name", "width": '30%' },
          { data: function(row, type, set, meta) { return row.contact && row.contact.website || null; }, "width": '20%' },
          { data: function(row, type, set, meta) { return row.contact && row.contact.phone || null; }, "width": '20%' },
          { data: function(row, type, set, meta) { return row.contact && row.contact.email || null; }, "width": '20%' },
          { data: function(row, type, set, meta) { return row.contact && row.contact.country || null; }, "width": '15%' }
        ]
      });
    });
  </script>
<% end %>
