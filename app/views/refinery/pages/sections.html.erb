<%- page_images = @page.images.to_a %>
<% @page.parts.each_with_index do |section, i| %>
  <section class="section-<%= section.slug %>">
    <div class="grid-container">
      <div class="grid-x grid-padding-x">

        <% if section.slug == 'intro' %>
          <div class="cell">
            <%=raw section.body %>
          </div>

        <% elsif section.slug == 'integrations' %>
          <div class="cell">
            <%=raw section.body %>
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Zapier
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            <i class="fa fa-dropbox"></i> Dropbox
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Google
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Office 365
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Slack
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Asana
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Trello
          </div>

          <div class="cell medium-3 small-1 text-align-center">
            Xero
          </div>

        <% elsif section.slug == 'submenu' %>
          <div class="cell">
            <ul class="vertical dropdown menu" data-responsive-menu="accordion large-dropdown">
              <% @page.children.each do |page| %>
                <li><%= link_to page.title, refinery.url_for(page.url) %></li>
              <% end %>
            </ul>
          </div>

        <% else %>
          <% page_image = page_images.shift %>
          <div class="cell medium-6 small-order-1<% if i.even? %> medium-order-2<% end %>">
            <% if page_image.present? %>
              <%= image_tag page_image.image.thumb('425x425#').url, style: 'width: 100%;' %>
            <% end %>
          </div>

          <div class="cell medium-6 small-order-2<% if i.even? %> medium-order-1<% end %>">
            <%=raw section.body %>
          </div>
        <% end %>

      </div>
    </div>
  </section>
<% end %>
