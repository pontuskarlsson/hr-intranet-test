<li class="business-card">
  <% if contact.image.present? %>
    <div class="profile-image">
      <%= dragonfly_reveal_tag contact.image, 40, 40 %>
    </div>
  <% else %>
    <i class="fa fa-<%= contact.is_organisation ? 'building' : 'user' %>"></i>
  <% end %>
  <h4>
    <% if page_role? Refinery::Marketing::ROLE_CRM_MANAGER %>
      <%= link_to contact.name, refinery.marketing_contact_path(contact) %>
    <% else %>
      <%= contact.name %>
    <% end %>
  </h4>
  <p class="bc-attribute"><%= contact.email %></p>
  <p class="bc-attribute"><%= contact.phone %></p>
  <p class="bc-attribute"><%= contact.mobile %></p>

  <p class="bc-attribute"><%= contact.country %></p>
</li>
