<ul class="business-cards bc-grid">
  <% @company.users.each do |user| %>
    <li class="business-card">
      <% if user.contact&.image.present? %>
        <div class="profile-image">
          <%= dragonfly_reveal_tag user.contact.image, 40, 40 %>
        </div>
      <% else %>
        <i class="fa fa-user"></i>
      <% end %>
      <h4><%= user.full_name %></h4>
      <p class="bc-attribute"><%= user.email %></p>
      <p class="bc-attribute"><%= user.contact&.phone %></p>
      <p class="bc-attribute"><%= user.contact&.mobile %></p>

      <p class="bc-attribute"><%= user.contact&.city %></p>
      <p class="bc-attribute"><%= user.contact&.country %></p>
      <p class="bc-attribute">
        <span style="color: #999; font-size: 10px;">
          <% if user.last_active_at.nil? %>
            has never signed in
          <% else %>
            last active <%= time_ago_in_words user.last_active_at %> ago
          <% end %>
        </span>
      </p>
    </li>
  <% end %>
</ul>
