<h1>An error occoured on the Intranet</h1>
<p>
  The error message is:<br />
  <%= @error.message %><br />
  <%= @error.record.inspect if @error.respond_to? :record %>
</p>
<p>
  Backtrace:<br />
  <% @error.backtrace.each do |line| %>
    <%= line %>
  <% end %>
</p>

<% if @additional.any? %>
  <h4>Additional</h4>
  <% @additional.each do |e| %>
    <p>
      <% if e.respond_to? :message %>
        <%= e.message %><br />
      <% end %>
      <% if e.respond_to? :record %>
        <%= e.record.inspect %>
      <% end %>
    </p>
  <% end %>
<% end %>
